<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/postName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="-2dp"
        android:src="@drawable/brian" />

    <TextView
        android:id="@+id/postName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="25dp"
        android:text="Brian Doe" />

    <TextView
        android:id="@+id/postCollegeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/postName"
        android:layout_alignLeft="@+id/postName"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:text="Queens College" />

    <EditText
        android:id="@+id/topic"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/postCollegeName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/edit_text_background"
        android:ellipsize="end"
        android:ems="10"
        android:gravity="start|top"
        android:textCursorDrawable="@drawable/cursor_color"
        android:hint="Topic"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/submitPostButton"
        android:layout_alignRight="@+id/submitPostButton"

        android:layout_alignBottom="@+id/postName"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/ic_tsquared" />


    <EditText
        android:id="@+id/topicPost"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="137dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:gravity="start|top"
        android:textCursorDrawable="@drawable/cursor_color"
        android:hint="Hi Brian, what is your question?"
        android:inputType="textMultiLine"
        android:padding="10dp" />

    <Button
        android:id="@+id/submitPostButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/post_button_round"
        android:text="Post"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/cancelSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="10dp"
        android:text="Cancel"
        android:background="@drawable/cancel_button_round"
        android:textColor="#ffffff"/>

</RelativeLayout>